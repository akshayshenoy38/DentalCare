<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.akshay.dentalcare3.AppointmentConfirmActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fafafa">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What type of Appointment?"
                android:textSize="17sp"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:textStyle="normal"/>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center">


                <Button
                    android:layout_width="50dp"
                    android:layout_height="90dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_gravity="fill"
                    android:gravity="center"
                    android:background="@drawable/buttonshape4"
                    android:text="General Clean"
                    android:textColor="#000"
                    android:layout_margin="10dp"
                    android:padding="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="11sp"/>

                <Button
                    android:layout_width="50dp"
                    android:layout_height="90dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_gravity="fill"
                    android:gravity="center"
                    android:background="@drawable/buttonshape4"
                    android:text="Loose Filling"
                    android:textColor="#000"
                    android:layout_margin="10dp"
                    android:padding="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="11sp"/>

                <Button
                    android:layout_width="50dp"
                    android:layout_height="90dp"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:layout_gravity="fill"
                    android:gravity="center"
                    android:background="@drawable/buttonshape4"
                    android:text="Crown"
                    android:textColor="#000"
                    android:layout_margin="10dp"
                    android:padding="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="11sp"/>

                <Button
                    android:layout_width="50dp"
                    android:layout_height="90dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_gravity="fill"
                    android:gravity="center"
                    android:background="@drawable/buttonshape4"
                    android:text="Straightening"
                    android:textColor="#000"
                    android:layout_margin="10dp"
                    android:padding="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="11sp"/>


                <Button
                    android:layout_width="50dp"
                    android:layout_height="90dp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_gravity="fill"
                    android:gravity="center"
                    android:background="@drawable/buttonshape4"
                    android:text="Toothcare"
                    android:textColor="#000"
                    android:layout_margin="10dp"
                    android:padding="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="11sp"/>

                <Button
                    android:layout_width="50dp"
                    android:layout_height="90dp"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:layout_gravity="fill"
                    android:gravity="center"
                    android:background="@drawable/buttonshape4"
                    android:text="Consultation"
                    android:textColor="#000"
                    android:layout_margin="10dp"
                    android:padding="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="11sp"/>

                <Button
                    android:layout_width="50dp"
                    android:layout_height="90dp"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_gravity="fill"
                    android:gravity="center"
                    android:background="@drawable/buttonshape4"
                    android:text="Root Canal"
                    android:textColor="#000"
                    android:layout_margin="10dp"
                    android:padding="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="11sp"/>

                <Button
                    android:layout_width="50dp"
                    android:layout_height="90dp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_gravity="fill"
                    android:gravity="center"
                    android:background="@drawable/buttonshape4"
                    android:text="Bridge"
                    android:textColor="#000"
                    android:layout_margin="10dp"
                    android:padding="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="11sp"/>

                <Button
                    android:layout_width="50dp"
                    android:layout_height="90dp"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:layout_gravity="fill"
                    android:gravity="center"
                    android:background="@drawable/buttonshape4"
                    android:text="Cosmetic"
                    android:textColor="#000"
                    android:layout_margin="10dp"
                    android:padding="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="11sp"/>
            </GridLayout>

            <Button
                android:id="@+id/btnOtherProblem"

                android:text="Other Problem"
                android:textColor="#000"
                android:textSize="15sp"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/buttonshape2"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:elevation="10dp"
                />


            <Button
                android:id="@+id/btnSaveAndConfirm"

                android:text="Confirm"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/buttonshape1"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:elevation="10dp"
                android:layout_marginBottom="15dp"/>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
