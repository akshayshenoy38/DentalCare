<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rlRelativeLayout"
    android:background="#fffffe"
    tools:context="com.example.akshay.dentalcare3.MainPageActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dentalcarebg"
        android:foregroundGravity="left"
        android:paddingBottom="2dp" />



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#00555555"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/imgDentalCareLogo"
                android:src="@drawable/dentalcarelogotransparent"
                android:layout_gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDoctorNameame"
                android:textSize="30sp"
                android:text="Dr. Akshay Shenoy"
                android:textColor="#000"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDentalClinic"
                android:text="Dental Care Clinic"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/btnAboutUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About us"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="@drawable/buttonshapeicons"
                    android:drawableTop="@drawable/ic_about__us"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="fill"
                    android:onClick="showAboutUs"
                    android:elevation="10dp"/>


                <Button
                    android:id="@+id/btnServices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:text="Services"
                    android:background="@drawable/buttonshapeicons"
                    android:drawableTop="@drawable/ic_services"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="fill"
                    android:onClick="showServices"
                    android:elevation="10dp"/>

                <Button
                    android:id="@+id/btnAppointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="@drawable/buttonshapeicons"
                    android:drawableTop="@drawable/ic_appointments"
                    android:text="Appointment"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="fill"
                    android:elevation="10dp"/>


                <Button
                    android:id="@+id/btnDocBlog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="@drawable/buttonshapeicons"
                    android:drawableTop="@drawable/ic_doc_blog"
                    android:text="Doc Blog"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="fill"
                    android:onClick="showDocBlog"
                    android:elevation="10dp"/>

                <Button
                    android:id="@+id/btnTestimonials"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="@drawable/buttonshapeicons"
                    android:drawableTop="@drawable/ic_testimonials"
                    android:text="Testimonials"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="fill"
                    android:elevation="10dp"
                    android:onClick="showTestimonials"/>

                <Button
                    android:id="@+id/btnGallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="@drawable/buttonshapeicons"
                    android:drawableTop="@drawable/ic_gallery"
                    android:text="Gallery"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="fill"
                    android:elevation="10dp"/>

                <Button
                    android:id="@+id/btnAvailablity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="@drawable/buttonshapeicons"
                    android:drawableTop="@drawable/ic_availablity"
                    android:text="Availablity"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="fill"
                    android:elevation="10dp"
                    android:onClick="showAvailablityActivity"/>

                <Button
                    android:id="@+id/btnReachUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="@drawable/buttonshapeicons"
                    android:drawableTop="@drawable/ic_reach_us"
                    android:text="Reach Us"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="fill"
                    android:elevation="10dp"/>

                <Button
                    android:id="@+id/btnContactUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="@drawable/buttonshapeicons"
                    android:drawableTop="@drawable/ic_contact_us"
                    android:text="Contact Us"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="fill"/>
            </GridLayout>


            <Button
                android:id="@+id/btnBookAppointment"

                android:text="Book an appointment"
                android:textColor="#FFFFFF"
                android:textSize="15sp"

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/buttonshape1"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="30dp"
                android:onClick="showBookAppointment"
                android:elevation="10dp"/>


        </LinearLayout>





    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
